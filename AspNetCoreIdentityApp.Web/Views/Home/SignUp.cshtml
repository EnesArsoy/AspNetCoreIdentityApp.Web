 
@{
    ViewData["Title"] = "SignUp";
}
@model SignUpViewModel
@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2>Kullanıcı Kayıt Formu</h2>
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }       
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">

        </div>
        <form asp-controller="Home" asp-action="SignUp" method="post">
            <div class="row mb-3">
                <label for="UserName" class="col-md-4 form-label" asp-for="UserName"></label>
                <input asp-for="UserName" class="col-md-8 form-control">
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="row mb-3">
                <label for="Email" class="col-md-4 form-label" asp-for="Email"></label>
                <input asp-for="Email" class="col-md-8 form-control">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="row mb-3">
                <label for="Phone" class="col-md-4 form-label" asp-for="Phone"></label>
                <input asp-for="Phone" class="col-md-8 form-control">
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="row mb-3">
                <label for="Password" class="col-md-4 form-label" asp-for="Password"></label>
                <input asp-for="Password" class="col-md-8 form-control">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="row mb-3">
                <label for="PasswordConfirm" class="col-md-4 form-label" asp-for="PasswordConfirm"></label>
                <input asp-for="PasswordConfirm" class="col-md-8 form-control">
                <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>
